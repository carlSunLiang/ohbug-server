{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "docker:dev": "docker-compose -f ./docker/docker-compose.dev.yml up --build",
    "docker:build": "lerna run docker:build --stream",
    "start": "lerna run start --stream",
    "start:prod": "lerna run start:prod --stream",
    "build": "lerna run build --stream",
    "prettier": "lerna run prettier",
    "lint": "lerna run lint",
    "test": "lerna run test --stream",
    "test:watch": "lerna run test:watch --stream"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.2",
    "@types/supertest": "^2.0.8",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.9.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "tslint --fix -p tsconfig.json -c tslint.json",
      "prettier --parser=typescript --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
