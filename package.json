{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "docker:local": "docker-compose -f ./docker/docker-compose.local.yml up --build",
    "docker:build": "docker build -t ohbug/server .",
    "start": "lerna run start --parallel",
    "build": "lerna run build --stream",
    "prettier": "lerna run prettier",
    "lint": "lerna run lint",
    "test": "lerna run test --parallel",
    "test:watch": "lerna run test:watch --parallel"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.9",
    "@nestjs/core": "^7.0.9",
    "@nestjs/microservices": "^7.0.9",
    "@nestjs/platform-express": "^7.0.9",
    "@nestjs/typeorm": "^7.0.0",
    "@ohbug/browser": "^0.0.9",
    "@ohbug/core": "^0.0.9",
    "@ohbug/react": "^0.0.5",
    "@ohbug/vue": "^0.0.5",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "dayjs": "^1.8.26",
    "dotenv": "^8.2.0",
    "kafkajs": "^1.12.0",
    "pg": "^8.0.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.2",
    "@nestjs/testing": "^7.0.9",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.2",
    "@types/react": "^16.9.34",
    "@types/supertest": "^2.0.8",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.9.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "tslint --fix -p tsconfig.json -c tslint.json",
      "prettier --parser=typescript --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
