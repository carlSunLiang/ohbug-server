{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "docker:local": "docker-compose -f docker-compose.local.yml up --build",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build -d",
    "docker:prod": "docker-compose -f docker-compose.yml up --build -d",
    "docker:build:test": "docker build -t ohbug-server-test .",
    "docker:build:prod": "docker build -t ohbug-server .",
    "build": "lerna run build --stream",
    "start": "lerna run start --parallel",
    "start:test": "lerna run start:test --parallel",
    "start:prod": "lerna run start:prod --parallel",
    "deploy:test": "npm run build & npm run docker:test & npm run start:test",
    "deploy:prod": "npm run build & npm run docker:prod & npm run start:prod",
    "prettier": "lerna run prettier",
    "lint": "lerna run lint",
    "test": "lerna run test --parallel",
    "test:watch": "lerna run test:watch --parallel"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.13",
    "@nestjs/config": "^0.4.2",
    "@nestjs/core": "^7.0.13",
    "@nestjs/microservices": "^7.0.13",
    "@nestjs/platform-express": "^7.0.13",
    "@nestjs/typeorm": "^7.0.0",
    "@ohbug/browser": "^0.0.9",
    "@ohbug/core": "^0.0.9",
    "@ohbug/react": "^0.0.5",
    "@ohbug/vue": "^0.0.5",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "dayjs": "^1.8.27",
    "kafkajs": "^1.12.0",
    "pg": "^8.2.1",
    "ramda": "^0.27.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@nestjs/cli": "^7.1.5",
    "@nestjs/testing": "^7.0.13",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "@types/ramda": "^0.27.6",
    "@types/react": "^16.9.35",
    "@types/supertest": "^2.0.9",
    "commitizen": "^4.1.2",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.21.0",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.4",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.1",
    "typescript": "^3.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "tslint --fix -p tsconfig.json -c tslint.json",
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
