{
  "name": "@ohbug-server/notifier",
  "version": "0.0.0",
  "description": "ohbug server notifier",
  "author": "chenyueban",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "cross-env NODE_ENV=development nest start --watch",
    "build": "nest build",
    "start:debug": "nest start --debug --watch",
    "start:test": "cross-env pm2 start ./ecosystem.config.js --env test",
    "start:prod": "cross-env pm2 start ./ecosystem.config.js --env production",
    "prettier": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@ohbug-server/common": "^0.0.0",
    "markdown-it": "^11.0.0",
    "nodemailer": "^6.4.10",
    "web-push": "^3.4.4"
  },
  "devDependencies": {
    "@types/markdown-it": "^10.0.2",
    "@types/nodemailer": "^6.4.0",
    "@types/web-push": "^3.3.0"
  }
}
